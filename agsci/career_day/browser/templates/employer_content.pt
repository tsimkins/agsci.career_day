<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="eea">

<body>

    <metal:block define-macro="content-core">

        <div class="contentLeadImageContainer"
            tal:condition="view/has_logo">
            <img tal:replace="structure view/tag" />
        </div>

        <metal:description
            define-slot="description">

            <div class="tileDescription" tal:content="view/description|nothing" />

        </metal:description>

        <tal:text
            define="text context/text|nothing"
            condition="text"
            content="structure text/raw" />

        <tal:website
            define="website view/website|nothing"
            condition="website">
            <h4>Company Website</h4>
            <p>
                <a
                    tal:attributes="href website"
                    tal:content="website" />
            </p>

        </tal:website>

        <tal:majors
            define="majors view/majors|nothing"
            condition="majors">
            <h4>Majors</h4>
            <ul>
                <li tal:repeat="i majors"
                    tal:content="i" />
            </ul>
        </tal:majors>

        <tal:class_year
            define="class_year view/class_year|nothing"
            condition="class_year">
            <h4>Class Year(s)</h4>
            <ul>
                <li tal:repeat="i class_year"
                    tal:content="i" />
            </ul>
        </tal:class_year>

        <tal:positions_available
            define="positions_available view/positions_available|nothing"
            condition="positions_available">
            <h4>Positions Available</h4>
            <ul>
                <li tal:repeat="i positions_available"
                    tal:content="i" />
            </ul>
        </tal:positions_available>

        <div class="visualClear"><!-- --></div>

    </metal:block>

</body>
</html>
